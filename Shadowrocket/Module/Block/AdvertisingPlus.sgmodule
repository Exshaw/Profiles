[URL Rewrite]
^https?:\/\/api\.bilibili\.com\/pgc\/activity\/deliver\/material\/receive - reject-dict
^https?:\/\/api\.bilibili\.com\/x\/vip\/ads\/material\/report - reject-dict
^https://api.bilibili.com/pgc/season/player/cards - reject-dict
^https?:\/\/api\.bilibili\.com\/pgc\/season\/player\/ogv\/cards - reject-dict
^https://app.bilibili.com/x/v2/splash/show - reject-dict
^https?:\/\/manga\.bilibili\.com\/twirp\/comic\.v\d\.Comic\/(Flash|ListFlash|GetActivityTab) - reject-dict
^https?:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords$ - reject

[Script]
Bilibili = type=http-request,pattern=^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/v2\/feed\/index\?,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/request.bundle.js
Bilibili = type=http-response,requires-body=1,pattern=^https?:\/\/app\.bili(bili\.com|api\.net)\/x\/v2\/(splash\/(brand\/list|event\/list2|list|show)|feed\/index(\/story)?|search\/square),script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1,pattern=^https?:\/\/api\.bilibili\.com\/x\/web-interface\/wbi\/index\/top\/feed\/rcmd\?,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1,pattern=^https?:\/\/api\.bili(bili\.com|api\.net)\/pgc\/page\/(bangumi|cinema\/tab\?),script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1,pattern=^https?:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1, binary-body-mode=1,max-size=262144,pattern=^https?:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.app\.(view|viewunite)\.v1\.View\/(View|TFInfo|RelatesFeed)$,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1, binary-body-mode=1,pattern=^https?:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.app\.dynamic\.v2\.Dynamic\/Dyn(All|Video)$,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1, binary-body-mode=1,pattern=^https?:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.app\.playurl\.v1\.PlayURL\/PlayView$,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1, binary-body-mode=1,pattern=^https?:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.polymer\.app\.search\.v1\.Search\/SearchAll$,script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
Bilibili = type=http-response,requires-body=1, binary-body-mode=1,pattern=^https:\/\/(grpc|app)\.bili(bili\.com|api\.net)\/bilibili\.community\.service\.dm\.v1\.DM\/(DmView|DmSegMobile),script-path=https://github.com/BiliUniverse/ADBlock/releases/download/v0.6.19/response.bundle.js
